# Clawdbot GHCR Deployment Environment Variables
# Copy this file to .env and fill in the values

# Required: Gateway authentication token
# Generate with: openssl rand -hex 32
CLAWDBOT_GATEWAY_TOKEN=

# Model providers (at least one recommended)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Optional: Image version (default: latest)
# CLAWDBOT_VERSION=latest

# Optional: Gateway configuration
# CLAWDBOT_GATEWAY_BIND=lan
# CLAWDBOT_GATEWAY_PORT=18789
# CLAWDBOT_BRIDGE_PORT=18790

# Optional: Data directories (default: ./data/config and ./data/workspace)
# CLAWDBOT_CONFIG_DIR=./data/config
# CLAWDBOT_WORKSPACE_DIR=./data/workspace
